<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="800">
    <Grid OpacityMask="Black">
        <Label 
            Content="ENTER THE DETALIES AND PRESS ADD DRONE" 
            HorizontalAlignment="Left" 
            Margin="10,30,0,0" 
            FontWeight="Bold" 
            FontSize="16"/>
        <Label 
            Content="ENTER Name:" 
            HorizontalAlignment="Left" 
            Margin="24,65,0,0"/>
        <TextBlock 
            HorizontalAlignment="Left"
            Margin="30,110,0,0" Text="ENTER Id:" 
            TextWrapping="Wrap" VerticalAlignment="Top"
            Width="70"/>
        <TextBox 
            x:Name="Name"
            HorizontalAlignment="Left"
            Margin="200,70,0,0" 
            Width="120"
            VerticalAlignment="Top"/>
        <TextBox 
            x:Name="ID"
            HorizontalAlignment="Left" 
            Margin="200,110,0,0" 
            Width="120"
            VerticalAlignment="Top"/>
        <Label 
            Content="ENTER Max weight:" 
            HorizontalAlignment="Left" 
            Margin="24,145,0,0" 
            VerticalAlignment="Top"/>
        <TextBox
            x:Name="Weight" 
            HorizontalAlignment="Left" 
            Margin="200,150,0,0" 
            VerticalAlignment="Top" 
            Width="120"/>
        <Label 
            Content="ENTER First charge station ID:&#xD;or pick one from the list below" 
            HorizontalAlignment="Left" 
            Margin="24,185,0,0" 
            VerticalAlignment="Top" Height="42"/>
        <TextBox 
            x:Name="stationId" 
            HorizontalAlignment="Left" 
            Margin="200,190,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="120"/>
        <Button 
            x:Name="AddDrone" 
            Content="Add&#xD;&#xA;Drone" 
            HorizontalAlignment="Left" 
            Margin="543,79,0,0" 
            VerticalAlignment="Top" 
            Height="97" 
            Width="126" 
            Click="AddDrone_Click"/>
        <ListBox
            x:Name="StationList"
            Margin="32,237,528,21" 
            SelectionMode="Single" MouseDoubleClick="StationList_MouseDoubleClick"/>
    </Grid>
</Window>
