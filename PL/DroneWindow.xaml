<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" 
        Height="450"
        Width="800">
    <Grid OpacityMask="Black">
        <Label
            x:Name="titelLabel"
            Content="Fill in the detales and click Add Drone please"
            HorizontalAlignment="Right"
            Margin="0,10,155,0"
            VerticalAlignment="Top" 
            Width="409" 
            FontWeight="Bold" 
            FontSize="16"
            Visibility="Hidden"/>
        <Label 
            x:Name="nameLabel"
            Content="ENTER Name:" 
            HorizontalAlignment="Right" 
            Margin="0,65,620,0"
            VerticalAlignment="Top"/>
        <Label
            x:Name="IDLabel"
            HorizontalAlignment="Right"
            Margin="0,105,620,0" 
            Content="ENTER Id:" 
            VerticalAlignment="Top"
            Width="60"/>
        <TextBox
            x:Name="Name"
            HorizontalAlignment="Left"
            Margin="200,70,0,0" 
            Width="120"
            VerticalAlignment="Top"
            IsReadOnlyCaretVisible="False"/>
        <TextBox 
            x:Name="ID"
            HorizontalAlignment="Left" 
            Margin="200,110,0,0" 
            Width="120"
            VerticalAlignment="Top"/>
        <Label 
            x:Name="weightLabel"
            Content="Select Max weight:" 
            HorizontalAlignment="Right" 
            Margin="0,145,620,0" 
            VerticalAlignment="Top"/>
        <ComboBox 
            Name="WeightSelector" 
            Margin="200,147,480,0"
            VerticalAlignment="Top"/>
        <Label 
            x:Name="stationIdLabel"
            Content="pick one station from the list to first charging" 
            HorizontalAlignment="Right" 
            Margin="0,203,431,0" 
            VerticalAlignment="Top" 
            Height="42" 
            Width="254"
            Visibility="Hidden"/>
        <Button 
            x:Name="AddDroneButton" 
            Content="Add&#xD;&#xA;Drone" 
            HorizontalAlignment="Left" 
            Margin="473,129,0,0" 
            VerticalAlignment="Top" 
            Height="97" 
            Width="126" 
            Click="AddDrone_Click"
            Visibility="Hidden"/>
        <ListBox
            x:Name="StationList"
            Margin="98,232,427,26" 
            SelectionMode="Single" 
            MouseDoubleClick="StationList_MouseDoubleClick"
            Visibility="Hidden"/>
        <Label
            x:Name="batteryLabel"
            HorizontalAlignment="Right"
            Margin="0,186,620,0"
            VerticalAlignment="Top"
            Content="Battery status:"/>
        <TextBox
            x:Name="Battery"
            HorizontalAlignment="Left"
            Margin="200,190,0,0"
            Width="120"
            VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Label           
            x:Name="statusLabel"
            Content="Status:"
            HorizontalAlignment="Right"
            Margin="0,219,620,0" 
            Width="45"
            VerticalAlignment="Top"/>
        <TextBox
             x:Name="Status"
            HorizontalAlignment="Left"
            Margin="200,226,0,0"
            Width="120"
            VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Label           
            x:Name="parcelLabel"
            Content="Parcel number:"
            HorizontalAlignment="Right"
            Margin="0,259,620,0" 
            Width="90"
            VerticalAlignment="Top"/>
        <TextBox
             x:Name="Parcel"
            HorizontalAlignment="Left"
            Margin="200,266,0,0"
            Width="120"
             VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Label           
            x:Name="latitudeLabel"
            Content="Latitude:"
            HorizontalAlignment="Right"
            Margin="0,300,620,0" 
            Width="55"
            />
        <TextBox
             x:Name="Latitude"
            HorizontalAlignment="Left"
            Margin="200,308,0,0"
            Width="120"
             VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Label           
            x:Name="longitudeLabel"
            Content="Longitude:"
            HorizontalAlignment="Right"
            Margin="0,337,620,0" 
            Width="65"
             VerticalAlignment="Top"
            />
        <TextBox
             x:Name="Longitude"
            HorizontalAlignment="Left"
            Margin="200,343,0,0"
            Width="120"
            VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Button 
            x:Name="NameUpdateButton"
            Content="Update Drone name" 
            HorizontalAlignment="Left" 
            Margin="599,59,0,0" 
            VerticalAlignment="Top" 
            Click="DroneNameUpdate_Click"
            IsCancel="True"/>
        <Button 
            x:Name="ChargeButton"
            Content="charge drone" 
            HorizontalAlignment="Left" 
            Margin="618,119,0,0" 
            VerticalAlignment="Top" 
            Click="Charge_Button"
            Visibility="Hidden"/>
        <Button 
            x:Name="associateButton"
            Content="Associating drone to delivery" 
            HorizontalAlignment="Left" 
            Margin="593,150,0,0" 
            VerticalAlignment="Top" 
            Click="ParcelAssociate_Button"
            Visibility="Hidden"/>
        <Button 
            x:Name="pickedUpButton"
            Content="Parcel picked up" 
            HorizontalAlignment="Left" 
            Margin="609,119,0,0" 
            VerticalAlignment="Top" 
            Click="Pickedup_Button"
            Visibility="Hidden"/>
        <Button 
            x:Name="provisionButton"
            Content="Parcel provided" 
            HorizontalAlignment="Left" 
            Margin="612,123,0,0" 
            VerticalAlignment="Top" 
            Click="Provision_Button"
            Visibility="Hidden"/>
        <Button 
            x:Name="ReleaseButton"            
            Content="Charging release" 
            HorizontalAlignment="Left" 
            Margin="609,250,0,0" 
            VerticalAlignment="Top" 
            Click="ChargingRelease_Button"
            Visibility="Hidden"/>
        <TextBox 
            x:Name="ChargingTime"            
            HorizontalAlignment="Left" 
            Margin="629,150,0,0" 
            Text="HH:MM" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="53" 
            Height="19"
            Visibility="Hidden"/>
        <Label 
            x:Name="ChargingTimeLabel"
            Content="Time of charging" 
            HorizontalAlignment="Left" 
            Margin="606,119,0,0" 
            VerticalAlignment="Top" 
            Width="105"
            Visibility="Hidden"/>
        <Button
            x:Name="CloseButton"
            Content="Close window" 
            HorizontalAlignment="Left" 
            Margin="689,319,0,0" 
            VerticalAlignment="Top" 
            Width="84" 
            Click="CloseButton_Click" 
            Height="61"/>
    </Grid>
</Window>
