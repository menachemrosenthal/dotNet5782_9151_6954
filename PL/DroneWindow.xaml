<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" 
        Height="450"
        Width="800">
    <Grid OpacityMask="Black">
        <Label 
            HorizontalAlignment="Left" 
            Margin="10,30,0,10" 
            FontWeight="Bold" 
            FontSize="16">
            <RichTextBox>
                <FlowDocument>
                    <Paragraph>
                        <Run Text="RichTextBox"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Label>
        <Label 
            x:Name="nameLabel"
            Content="ENTER Name:" 
            HorizontalAlignment="Right" 
            Margin="0,65,675,0"
            VerticalAlignment="Top"/>
        <Label
            x:Name="IDLabel"
            HorizontalAlignment="Right"
            Margin="0,105,675,0" 
            Content="ENTER Id:" 
            VerticalAlignment="Top"
            Width="60"/>
        <TextBox
            x:Name="Name"
            HorizontalAlignment="Left"
            Margin="200,70,0,0" 
            Width="120"
            VerticalAlignment="Top"
            IsReadOnlyCaretVisible="False"/>
        <TextBox 
            x:Name="ID"
            HorizontalAlignment="Left" 
            Margin="200,110,0,0" 
            Width="120"
            VerticalAlignment="Top"/>
        <Label 
            x:Name="weightLabel"
            Content="Select Max weight:" 
            HorizontalAlignment="Right" 
            Margin="0,145,675,0" 
            VerticalAlignment="Top"/>
        <ComboBox 
            Name="WeightSelector" 
            Margin="200,147,480,0"
            VerticalAlignment="Top"
            SelectionChanged="WeightSelector_SelectionChanged"
            IsReadOnly="False"/>

        <Label 
            x:Name="stationIdLabel"
            Content="pick one station from the list to first charge" 
            HorizontalAlignment="Left" 
            Margin="516,0,0,0" 
            VerticalAlignment="Center" 
            Height="42"/>
        <Button 
            x:Name="AddDrone" 
            Content="Add&#xD;&#xA;Drone" 
            HorizontalAlignment="Left" 
            Margin="664,10,0,0" 
            VerticalAlignment="Top" 
            Height="97" 
            Width="126" 
            Click="AddDrone_Click"/>
        <ListBox
            x:Name="StationList"
            Margin="516,227,44,31" 
            SelectionMode="Single" 
            MouseDoubleClick="StationList_MouseDoubleClick"/>
        <Label
            x:Name="batteryLabel"
            HorizontalAlignment="Right"
            Margin="0,186,675,0"
            VerticalAlignment="Top"
            Content="Battery status:"/>
        <TextBox
            x:Name="Battery"
            HorizontalAlignment="Left"
            Margin="200,190,0,0"
            Width="120"
            VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Label           
            x:Name="statusLabel"
            Content="Status:"
            HorizontalAlignment="Right"
            Margin="0,219,675,0" 
            Width="45"
            VerticalAlignment="Top"/>
        <TextBox
             x:Name="Status"
            HorizontalAlignment="Left"
            Margin="200,226,0,0"
            Width="120"
            VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Label           
            x:Name="parcelLabel"
            Content="Parcel number:"
            HorizontalAlignment="Right"
            Margin="0,259,675,0" 
            Width="90"
            VerticalAlignment="Top"/>
        <TextBox
             x:Name="Parcel"
            HorizontalAlignment="Left"
            Margin="200,266,0,0"
            Width="120"
             VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Label           
            x:Name="latitudeLabel"
            Content="Latitude:"
            HorizontalAlignment="Right"
            Margin="0,300,675,0" 
            Width="55"
            />
        <TextBox
             x:Name="Latitude"
            HorizontalAlignment="Left"
            Margin="200,308,0,0"
            Width="120"
             VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Label           
            x:Name="longitudeLabel"
            Content="Longitude:"
            HorizontalAlignment="Right"
            Margin="0,337,675,0" 
            Width="65"
             VerticalAlignment="Top"
            />
        <TextBox
             x:Name="Longitude"
            HorizontalAlignment="Left"
            Margin="200,343,0,0"
            Width="120"
            VerticalAlignment="Top"
            IsReadOnly="True"/>
        <Button 
            x:Name="NameUpdateButton"
            Content="update drone" 
            HorizontalAlignment="Left" 
            Margin="550,100,0,0" 
            VerticalAlignment="Top" 
            Click="DroneNameUpdate_Click"
            IsCancel="True"/>
        <Button 
            x:Name="chargeButton"
            Content="charge drone" 
            HorizontalAlignment="Left" 
            Margin="450,100,0,0" 
            VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button 
            x:Name="deliveryButton"
            Content="send drone to delivery" 
            HorizontalAlignment="Left" 
            Margin="350,150,0,0" 
            VerticalAlignment="Top" 
            Click="Button_Click_2"/>
        <Button 
            x:Name="pickedUpButton"
            Content="parcel picked up" 
            HorizontalAlignment="Left" 
            Margin="599,150,0,0" 
            VerticalAlignment="Top" Click="Button_Click_3"/>
        <Button 
            x:Name="previsionButton"
            Content="parcel prevision" 
            HorizontalAlignment="Left" 
            Margin="500,150,0,0" 
            VerticalAlignment="Top" Click="Button_Click_4"/>
    </Grid>
</Window>
