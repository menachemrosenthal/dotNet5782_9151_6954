<Window x:Class="PL.ParcelListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ParcelListWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="ParcelListView"
            Grid.Row="1"
            HorizontalAlignment="Stretch"    
            MouseDoubleClick="ParcelListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Parcel number" Width="80" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Sender ID" Width="100" DisplayMemberBinding="{Binding Senderid}"/>
                    <GridViewColumn Header="Target ID" Width="100" DisplayMemberBinding="{Binding TargetId}"/>
                    <GridViewColumn Header="Weight" Width="80" DisplayMemberBinding="{Binding Weight}"/>
                    <GridViewColumn Header="Priority" Width="80" DisplayMemberBinding="{Binding Priority}"/>
                    <GridViewColumn Header="Status" Width="80" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Customer ID " FontSize="16" FontWeight="Bold" Foreground="Brown"/>
                                <TextBox Text="{Binding Name,Mode=OneWay}" FontSize="14" FontWeight="Bold" Foreground="Black" IsReadOnly="False"/>
                            </StackPanel>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
        <Button x:Name="addParcel"
            Content="Add Parcel"
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Height="50" Width="100" Click="AddParcel_Click" Margin="0,10,91,0"/>
        <Button
            x:Name="senderGruping"
            Content="Gruping by Sender" 
            HorizontalAlignment="Center" 
            Margin="0,25,0,0" 
            VerticalAlignment="Top" Width="120" Click="SenderGruping_Click"/>
        <Button
            Content="Gruping by Target" 
            HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,53,0,0" Click="Button_Click"/>
        <ComboBox HorizontalAlignment="Left" Margin="138,68,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="138,0,0,0" VerticalAlignment="Center" Width="120"/>

    </Grid>
</Window>
